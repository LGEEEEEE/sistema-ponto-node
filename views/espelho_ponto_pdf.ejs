<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Espelho de Ponto</title>
    <style>
        /* Estilos otimizados para impressão e PDF */
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; color: #333; font-size: 10px; }
        .header { text-align: center; margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px; }
        h1, h2 { color: #2c3e50; margin: 0; }
        h1 { font-size: 18px; }
        h2 { font-size: 14px; font-weight: normal; }
        .funcionario-bloco { margin-bottom: 25px; page-break-inside: avoid; }
        h3 { font-size: 14px; background-color: #f2f2f2; padding: 8px; border-radius: 4px; }
        .semana-tabela { width: 100%; border-collapse: collapse; margin-bottom: 15px; }
        .semana-tabela th, .semana-tabela td { border: 1px solid #ddd; padding: 6px; text-align: left; vertical-align: top; }
        .semana-tabela th { background-color: #f2f2f2; }
        .semana-tabela td:first-child { font-weight: bold; width: 12%; }
        .semana-tabela ul { margin: 0; padding-left: 14px; font-size: 9px; }
        .signature-area { margin-top: 60px; page-break-inside: avoid; text-align: center; }
        .signature-line { border-top: 1px solid #333; width: 250px; margin: 0 auto; padding-top: 5px; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Espelho de Ponto</h1>
        <h2>Empresa: <%= empresa.nome %></h2>
        <h2>Período: <%= dataInicio.toLocaleDateString('pt-BR') %> a <%= dataFim.toLocaleDateString('pt-BR') %></h2>
    </div>

    <% relatorioAgrupado.forEach(funcionario => { %>
        <div class="funcionario-bloco">
            <h3><%= funcionario.nome %></h3>
            <% if (funcionario.semanas.length > 0) { %>
                <% funcionario.semanas.forEach(semana => { %>
                    <% const diasDaSemana = {segunda: 'Segunda', terca: 'Terça', quarta: 'Quarta', quinta: 'Quinta', sexta: 'Sexta'}; %>
                    <table class="semana-tabela">
                        <thead>
                            <tr>
                                <th>Dia</th>
                                <th>Data</th>
                                <th>Registros</th>
                                <th>Total</th>
                                <th>Saldo</th>
                                <th>Observação</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Object.keys(diasDaSemana).forEach(key => { %>
                                <% const dia = semana[key]; %>
                                <tr>
                                    <td><%= diasDaSemana[key] %></td>
                                    <% if (dia) { %>
                                        <td><%= dia.data.toLocaleDateString('pt-BR') %></td>
                                        <td>
                                            <ul>
                                            <% dia.registros.forEach(r => { %>
                                                <li><strong><%= r.tipo %>:</strong> <%= new Date(r.timestamp).toLocaleTimeString('pt-BR') %></li>
                                            <% }) %>
                                            </ul>
                                        </td>
                                        <td><%= dia.horasTrabalhadas %></td>
                                        <td><%= dia.saldoHoras %></td>
                                        <td><%= dia.observacao %></td>
                                    <% } else { %>
                                        <td colspan="5"></td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% }) %>

                <div class="signature-area">
                    <div class="signature-line">
                        Assinatura do Funcionário(a)
                    </div>
                </div>

            <% } else { %>
                <p>Nenhum registro encontrado para este funcionário no período.</p>
            <% } %>
        </div>
    <% }) %>
</body>
</html>